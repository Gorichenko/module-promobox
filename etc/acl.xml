        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::content">
                    <resource id="VOID_Promobox::productslider" title="Product Sliders" sortOrder="30">
                        <resource id="VOID_Promobox::slider" title="Sliders" sortOrder="10"/>
